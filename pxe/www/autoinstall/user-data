#cloud-config
autoinstall:
  version: 1
  locale: de_CH.UTF-8
  keyboard:
    layout: ch
  timezone: Europe/Zurich

  identity:
    hostname: lernvirt-node
    username: ubuntu

  ssh:
    install-server: true
    allow-pw: false
    authorized-keys:
      - ssh-rsa  insecure@lerncloud

  storage:
    layout:
      name: direct

  late-commands:
    - curtin in-target -- systemctl disable snapd
    - curtin in-target -- apt install -y curl git
